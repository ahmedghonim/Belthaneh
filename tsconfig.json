{
  "compilerOptions": {
    "baseUrl": "./src",
    "composite": true,
    "paths": {
      "svg/*": ["assets/svg/*"],
      "images/*": ["assets/images/*"],
      "hooks/*": ["hooks/*"],
      "util/*": ["util/*"],
      "store/*": ["store/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "next-env.d.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "tailwind.config.js",
    "src/components/404-page/404.js"
  ],
  "exclude": ["node_modules", "public", "src/**/*.spec.ts", "src/**/*.spec.tsx"]
}
